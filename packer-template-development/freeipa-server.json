{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_block_device_mappings":[{
      "device_name":"/dev/sda1",
      "encrypted": true
      }],
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "force_deregister": true,
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "Fedora-Cloud-Base-27-1.6.x86_64-eu-west-1-HVM-gp2-0",
      "root-device-type": "ebs"
      },
      "owners": ["125523088429"],
      "most_recent": true
    },
    "instance_type": "m4.large",
    "ssh_username": "fedora",
    "ami_name": "freeipa-server-latest"
  }],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sleep 30",
          "sudo dnf -y update",
          "sudo dnf -y install yum",
          "sudo dnf -y install freeipa-server",
          "sudo dnf -y install freeipa-server-dns",
          "sudo dnf -y install nano",
          "sudo dnf -y install telnet"
         ]
       }
   ]
}
