# Generated by Chef, local modifications will be overwritten

[Main]
# The host of the data collector server to send Agent data to
ci_url: <%= @ci_url %>

# If you need a proxy to connect to the Internet, provide the settings here
<% if node['cloudinsight-agent']['web_proxy']['host'] -%>
proxy_host: <%= node['cloudinsight-agent']['web_proxy']['host'] %>
proxy_port: <%= node['cloudinsight-agent']['web_proxy']['port'] %>
proxy_user: <%= node['cloudinsight-agent']['web_proxy']['user'] %>
proxy_password: <%= node['cloudinsight-agent']['web_proxy']['password'] %>
<% else -%>
# proxy_host: my-proxy.com
# proxy_port: 3128
# proxy_user: user
# proxy_password: password
<% end -%>
# To be used with some proxys that return a 302 which make curl switch from POST to GET
<% if node['cloudinsight-agent']['web_proxy']['proxy_forbid_method_switch'] -%>
proxy_forbid_method_switch: <%= node['cloudinsight-agent']['web_proxy']['proxy_forbid_method_switch'] %>
<% else -%>
# proxy_forbid_method_switch: no
<% end -%>

# If you run the agent behind haproxy, you might want to set this to yes
<% if node['cloudinsight-agent']['web_proxy']['skip_ssl_validation'] -%>
skip_ssl_validation: <%= node['cloudinsight-agent']['web_proxy']['skip_ssl_validation'] %>
<% else -%>
# skip_ssl_validation: no
<% end -%>

# The Cloudinsight license key to associate your Agent's data with your organization.
license_key: <%= @license_key %>

# Force the hostname to whatever you want.
hostname: <%= node['cloudinsight-agent']['hostname'] %>

tags: <%= node['cloudinsight-agent']['tags'] %>

# ========================================================================== #
# Logging
# ========================================================================== #

log_level: <%= node['cloudinsight-agent']['log_level'] %>

# collector_log_file: /var/log/cloudinsight-agent/collector.log
# forwarder_log_file: /var/log/cloudinsight-agent/forwarder.log
# onestatsd_log_file: /var/log/cloudinsight-agent/onestatsd.log

# if syslog is enabled but a host and port are not set, a local domain socket
# connection will be attempted
#
log_to_syslog: <%= node['cloudinsight-agent']['syslog']['active'] ? 'yes' : 'no' %>
<% if node['cloudinsight-agent']['syslog']['udp'] -%>
syslog_host: <%= node['cloudinsight-agent']['syslog']['host'] %>
syslog_port: <%= node['cloudinsight-agent']['syslog']['port'] %>
<% end -%>
