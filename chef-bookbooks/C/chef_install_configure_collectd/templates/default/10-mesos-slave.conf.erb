<LoadPlugin "python">
  Globals true
</LoadPlugin>

<Plugin "python">
  ModulePath "<%= @python_folder %>"

  Import "mesos-slave"

  <Module "mesos-slave">
    Cluster "<%= @cluster %>"
    Instance "<%= @instance %>"
    Path "<%= @binary_path %>"
    Host "<%= @hostname %>"
    Port <%= @port %>
    Verbose false
  </Module>
</Plugin>

