apiVersion: v1
kind: ServiceAccount
metadata:
  name: <%= @sa['name'] %>
<% if @sa.has_key?('labels') %>
  labels:
  <% @sa['labels'].each_pair do |k, v| %>
    <%= k %>: <%= v %>
  <%- end -%>
<%- end -%>
<% if @sa.has_key?('secrets') %>
secrets:
<% @sa['secrets'].each do |secret| %>
- name: <%= secret %>
<%- end -%>
<%- end -%>
