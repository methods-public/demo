[client]
default-character-set          = utf8
port                           = <%= @port %>
socket                         = /var/run/<%= @service_name %>/mysqld.sock  #['mysql']['service_name']

[mysql]
default-character-set          = utf8

[mysqld]
max_allowed_packet	       = 2G
user                           = mysql
pid-file                       = /var/run/<%= @service_name %>/mysqld.pid
socket                         = /var/run/<%= @service_name %>/mysqld.sock
port                           = <%= @port %>
datadir                        = /var/lib/<%= @service_name %>
tmpdir                         = /tmp
log-error                      = /var/log/<%= @service_name %>/error.log
!includedir /etc/<%= @service_name %>/conf.d

[mysqld_safe]
socket                         = /var/run/<%= @service_name %>/mysqld.sock

