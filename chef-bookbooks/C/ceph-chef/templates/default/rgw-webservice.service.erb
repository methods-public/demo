[Unit]
Description=uWSGI instance to serve RGW Admin Web Service
After=network.target

[Service]
User=root
Group=radosgw
WorkingDirectory=/usr/local/lib/rgw_webservice
Environment="PATH=/usr/local/bin"
ExecStart=/usr/sbin/uwsgi --ini /etc/rgw_webservice.ini
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
