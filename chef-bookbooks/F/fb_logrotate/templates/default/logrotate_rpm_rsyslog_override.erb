/var/log/cron
/var/log/maillog
/var/log/messages
/var/log/secure
/var/log/spooler
{
    nocreate
    nocopytruncate
    missingok
    sharedscripts
    postrotate
<% if node.systemd? %>
        /bin/systemctl kill -s HUP rsyslog || true
<% else %>
        # Old versions of rsyslog use rsyslogd.pid, but new versions use
        # syslogd.pid. For good measure, just check both files for the pid.
        # This way we'll restart whichever version of rsyslog is running.
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
        /bin/kill -HUP `cat /var/run/rsyslogd.pid 2> /dev/null` 2> /dev/null || true
<% end %>
    endscript
}
