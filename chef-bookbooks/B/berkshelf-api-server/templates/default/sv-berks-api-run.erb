#!/bin/sh

export PATH=/opt/chef/embedded/bin:$PATH
export HOME=<%= node[:berkshelf_api][:deploy_path] %>
cd $HOME

exec 2>&1
exec su <%= node[:berkshelf_api][:owner] %> -c '/opt/chef/embedded/bin/bundle exec bin/berks-api -p <%= node[:berkshelf_api][:port] %> -c <%= node[:berkshelf_api][:config_path] %>'
