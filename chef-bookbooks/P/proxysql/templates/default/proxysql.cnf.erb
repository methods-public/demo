# Generated by Chef for <%= node[:fqdn] %>
# file proxysql.cfg

datadir="<%= @data_dir %>"

<% if !@admin_variables.empty? %>
admin_variables=<%= to_cnf(@admin_variables) %>
<% end %>

<% if !@mysql_variables.empty? %>
mysql_variables=<%= to_cnf(@mysql_variables) %>
<% end %>

<% if !@mysql_servers.empty? %>
# Defines all the MySQL servers
mysql_servers=<%= to_cnf(@mysql_servers) %>
<% end %>

<% if !@mysql_users.empty? %>
# Defines all the MySQL users
mysql_users:<%= to_cnf(@mysql_users) %>
<% end %>

<% if !@mysql_query_rules.empty? %>
# Defines MySQL Query Rules
mysql_query_rules:<%= to_cnf(@mysql_query_rules) %>
<% end %>

<% if !@schedulers.empty? %>
# Defines schedulers
scheduler=<%= to_cnf(@schedulers) %>
<% end %>

<% if !@mysql_replication_hostgroups.empty? %>
# Defines mysql replication hostgroups
mysql_replication_hostgroups=<%= to_cnf(@mysql_replication_hostgroups) %>
<% end %>
