[Unit]
Description=<%= @daemon_name %> daemon

[Service]
User=<%= @user %>
EnvironmentFile=<%= @env_path %>
ExecStart=/bin/bash $KAFKA_RUN $KAFKA_ARGS $KAFKA_CONFIG
TimeoutSec=10
TimeoutStopSec=<%= @kill_timeout %>
<% if @ulimit %>
LimitNOFILE=<%= @ulimit %>
<% end %>

[Install]
WantedBy=multi-user.target
