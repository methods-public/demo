server {
  listen 80 default_server;

  server_name <%= @server_name %>;

  root /usr/share/zabbix;
  index index.php index.html index.htm;

  access_log   /var/log/zabbix/frontend.access.log combined buffer=32k flush=5m;
  error_log    /var/log/zabbix/frontend.error.log;

  location /conf {
    deny all;
    return 404;
  }

  location /app {
    deny all;
    return 404;
  }

  location /include {
    deny all;
    return 404;
  }

  location /local {
    deny all;
    return 404;
  }

  include global/php.conf;

}

