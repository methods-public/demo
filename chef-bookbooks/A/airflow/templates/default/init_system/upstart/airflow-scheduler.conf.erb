description "Airflow scheduler"
author      "Sergey Bahchissaraitsev http://www.bahchis.com"

setuid <%= @user %>
setgid <%= @group %>

start on started networking or runlevel [2345]
stop on stopped networking or runlevel [016]

script
    . /etc/default/airflow
    exec <%= @bin_path %>/airflow scheduler --pid <%= @run_path %>/airflow-scheduler.pid
end script

pre-start script
    echo "[`date`] Airflow scheduler starting..."
end script

pre-stop script
	rm <%= @run_path %>/airflow-scheduler.pid
    echo "[`date`] Airflow scheduler shutting down..."
end script
