;
; Asterisk Call Management support
;

[general]
enabled = <%= node['asterisk']['manager']['enabled'] %>
port = <%= node['asterisk']['manager']['port'] %>
bindaddr = <%= node['asterisk']['manager']['ip_address'] %>
webenabled = <%= node['asterisk']['manager']['webenabled'] %>
timestampevents = <%= node['asterisk']['manager']['timestampevents'] %>

[<%= node['asterisk']['manager']['username'] %>]
secret = <%= node['asterisk']['manager']['password'] %>
deny = <%= node['asterisk']['manager']['deny'] %>
permit = <%= node['asterisk']['manager']['permit'] %>
read = <%= node['asterisk']['manager']['read_perms'].join(",") %>
write = <%= node['asterisk']['manager']['write_perms'].join(",") %>
<% node['asterisk']['manager']['event_filters'].each do |f| %>
eventfilter = <%= f %>
<% end %>
