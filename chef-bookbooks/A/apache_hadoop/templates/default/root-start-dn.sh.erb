#!/bin/bash

command=datanode

EXEC_WITH_USER="su <%= node.apache_hadoop.hdfs.user %> -l -c"

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`

log=<%= node.apache_hadoop.logs_dir %>/hadoop-<%= node.apache_hadoop.hdfs.user %>-$command-<%= node.hostname %>.log

$EXEC_WITH_USER "cd ${bin}/.] ; . ${bin}/../libexec/hadoop-config.sh ; . ${bin}/set-env.sh ; ${bin}/hadoop-daemon.sh --config \$HADOOP_CONF_DIR --script hdfs start $command"
sleep 2; head "$log"

PID_FILE=<%= node.apache_hadoop.logs_dir %>/hadoop-<%= node.apache_hadoop.hdfs.user %>-$command.pid
PID=`cat $PID_FILE` 
kill -0 $PID 

exit $?
