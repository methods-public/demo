<?xml version="1.0" encoding="UTF-8"?>
<Context path="/share" reloadable="true" >

    <Manager className="de.javakaffee.web.msm.MemcachedBackupSessionManager"
      memcachedNodes="<%= node['tomcat']['memcached_nodes'] %>"
      requestUriIgnorePattern=".*\.(ico|png|gif|jpg|css|js)$"
      transcoderFactoryClass="de.javakaffee.web.msm.serializer.kryo.KryoTranscoderFactory"
      sticky="<%= node['tomcat']['memcached']['sticky'] %>"
      sessionBackupAsync="<%= node['tomcat']['memcached']['sessionBackupAsync'] %>"
      copyCollectionsForSerialization="<%= node['tomcat']['memcached']['copyCollectionsForSerialization'] %>"
    />
</Context>