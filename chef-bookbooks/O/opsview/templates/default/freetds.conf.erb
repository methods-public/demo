[global]
  # TDS protocol version
; tds version = 4.2

  # Whether to write a TDSDUMP file for diagnostic purposes
  # (setting this to /tmp is insecure on a multi-user system)
; dump file = /tmp/freetds.log
; debug flags = 0xffff

  # Command and connection timeouts
; timeout = 10
; connect timeout = 10
  
  # If you get out-of-memory errors, it may mean that your client
  # is trying to allocate a huge buffer for a TEXT field.  
  # Try setting 'text size' to a more reasonable limit 
  text size = 64512

<% @mssql_servers.each do |server|%>
<% if server.attribute?("freetds") && server['freetds'].attribute?("hostname") -%>
[<%= server['freetds']['hostname'] %>]
  host = <%= server['freetds']['hostname'] %>
<% else %>
[<%= server['fqdn'].downcase %>]
  host = <%= server['fqdn'].downcase %>
<% end %>
<% if server.attribute?("freetds") && server['freetds'].attribute?("port") -%>
  port = <%= server['freetds']['port'] %>
<% elsif server.attribute?("freetds") && server['freetds'].attribute?("instance") -%>
  instance = <%= server['freetds']['instance'] %>
<% else %>
  port = 1433
<% end %>
<% if server.attribute?("freetds") && server['freetds'].attribute?("tds_version") -%>  
  tds version = <%= server['freetds']['tds_version'] %>
<% else -%>
  tds version = 7.2
<% end %>
<% end %>