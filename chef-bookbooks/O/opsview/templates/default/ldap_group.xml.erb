<contact>
<name>%NAME%</name>
<username>%SAMACCOUNTNAME%</username>
<comment>%DISPLAYNAME%</comment>
<role><name><%= @group['role'] || node['opsview']['ldap']['default_role'] %></name></role>
<all_hostgroups><%= @group['all_hostgroups'] || node['opsview']['ldap']['default_allhostgroups'] %></all_hostgroups>
<all_servicegroups><%= @group['all_servicegroups'] || node['opsview']['ldap']['default_allservicegroups'] %></all_servicegroups>
<% if @group["keywords"] -%>
<keywords>
<% @group["keywords"].each do |k| -%>
  <keyword name="<%= k %>"/>
<% end -%>
</keywords>
<% end -%>
</contact>