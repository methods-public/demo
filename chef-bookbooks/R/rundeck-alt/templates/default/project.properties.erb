#

#
# The base directory for this project's instances
#
project.dir = /var/rundeck/projects/${project.name}
#
# The base directory of project specific configuration files
#
project.etc.dir = /var/rundeck/projects/${project.name}/etc

#
# The resources registration file
#
project.resources.file = /var/rundeck/projects/${project.name}/etc/resources.xml

#
# The project description
#
project.description =
#
# The organization
#
project.organization =

# Project mail properties
# recipient addresses to send email (comma separated)
project.email.tolist = <%= @recipients %>
# email address appearing in message "from" field
project.email.from = <%= node['rundeck']['mail']['from'] %>
# email address replies should go
project.email.replyto = <%= node['rundeck']['mail']['from'] %>
# The rdeck email relay host. must be a functioning smtp relay server
project.email.mailhost = <%= node['rundeck']['mail']['hostname'] %>
project.email.mailport = <%= node['rundeck']['mail']['port'] %>
# User/pass info if the smtp server requires it
<% unless node['rundeck']['mail']['username'].nil? %>
project.email.user = <%= node['rundeck']['mail']['username'] %>
project.email.password = <%= node['rundeck']['mail']['password'] %>
project.email.ssl = <%= node['rundeck']['mail']['tls'] %>
<% end %>

# Custom project options
<% node['rundeck']['custom_properties']['project'].each do |key,value| -%>
<%= key %> = <%= value %>
<% end %>