<?xml version="1.0" encoding="UTF-8"?>

<!-- http://wiki.openrepose.org/display/REPOSE/IP+Identity -->
<% if !@version.nil? && @version.split('.')[0].to_i < 7 %>
<ip-identity
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://docs.api.rackspacecloud.com/repose/ip-identity/v1.0'
    xsi:schemaLocation='http://docs.api.rackspacecloud.com/repose/ip-identity/v1.0'
>
<% else %>
<ip-identity xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://docs.openrepose.org/repose/ip-identity/v1.0'
             xsi:schemaLocation='http://docs.openrepose.org/repose/ip-identity/v1.0'>
<% end %>
    <quality><%= @quality %></quality>

    <white-list quality="<%= @white_list_quality %>">
        <% @white_list_ip_addresses.each do |ip_address| %>
        <ip-address><%= ip_address %></ip-address>
        <% end %>
    </white-list>

</ip-identity>

