<?xml version="1.0" encoding="UTF-8"?>

<ip-user xmlns="http://docs.openrepose.org/repose/ip-user/v1.0">
    <user-header name="<%= @user_header_name %>" quality="<%= @user_header_quality %>"/>
    <group-header name="<%= @group_header_name %>" quality="<%= @group_header_quality %>"/>

    <% @groups.each do |group| %>
    <group name="<%= group['group_name'] %>">
       <% group['cidrips'].each do |ip| %>
       <cidr-ip><%= ip %></cidr-ip>
       <% end %>
    </group>
    <% end %>

</ip-user>
