# Source function library.
<% case node['platform_family'] -%>
<% when 'rhel' -%>
. /etc/rc.d/init.d/functions
<% else -%>
. /lib/lsb/init-functions
<% end -%>

# Define some variables
APP=skyline-horizon
# Name of the user to run as
USER=<%= node['skyline']['user'] %>
# Location of application's base directory
BASE=<%= node['skyline']['install_dir'] %>

start() {
  echo "Starting $APP"
  su -l $USER -c "cd $BASE/bin && ./horizon.d start"
  return $?
}

stop() {
  echo "Stopping $APP"
  su -l $USER -c "cd $BASE/bin && ./horizon.d stop"
  return $?
}

case "$1" in
  # Start command
  start)
    start
    RETVAL=$?
    ;;
  # Stop command
  stop)
    stop
    RETVAL=$?
    ;;
  # Restart command
  restart)
    stop
    start
    RETVAL=$?
    ;;
  # Status command
  status)
    ps aux | grep -v grep | grep 'horizon-agent.py start'
    RETVAL=$?
    ;;
  *)
    echo "Usage: $APP {start|restart|stop|status}"
    RETVAL=2
    ;;
esac
 
exit $RETVAL