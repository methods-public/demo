init_config:
  min_collection_interval: <%= @mysql_collection_interval %>
instances:
  - server: <%= @mysql_server %>
<%- if @mysql_user -%>
    user: <%= @mysql_user %>
<%- if @mysql_pass -%>
    pass: <%= @mysql_pass %>
<%- end -%>
<%- end -%>
<%- if @mysql_port -%>
    port: <%= @mysql_port %>
<%- end -%>
<%- if @mysql_sock -%>
    sock: <%= @mysql_sock %>
<%- end -%>
<%- if @mysql_defaults_file -%>
    defaults_file: <%= @mysql_defaults_file %>
<%- end -%>

