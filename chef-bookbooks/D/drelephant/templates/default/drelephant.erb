#!/bin/sh
#
# Startup script for drelephant
#
### BEGIN INIT INFO
# Provides:                     drelephant*
# Required-Start:                 
# Should-Start:                 
# Required-Stop:                  
# Default-Start:                2 3 4 5
# Default-Stop:                 0 1 6
# Short-Description:            start and stop drelephant-*
# Description:                  Start/Stop/Restart drelephant
### END INIT INFO

# Variables

START_PROG="cd  <%= node.drelephant.home %>; export RUNNING_PID=/tmp/dr-elephant.pid; export HADOOP_HOME=<%= node.apache_hadoop.home %>; export PATH=<%= node.apache_hadoop.home %>/bin:$PATH; <%= node.drelephant.home %>/bin/start.sh <%= node.drelephant.home %>/conf"  
STOP_PROG="export RUNNING_PID=/tmp/dr-elephant.pid; <%= node.drelephant.home %>/bin/stop.sh"  
PID_FILE=<%= node.drelephant.base_dir %>/RUNNING_PID
EXEC_WITH_USER="su <%= node.drelephant.user %> -c"

start() {
  ulimit -n 65000 2>&1 > /dev/null
  $EXEC_WITH_USER "$START_PROG"
  return $?
}

stop() {
  $EXEC_WITH_USER "$STOP_PROG"
  return $?
}

status() {
  res=1
  if [ -f $PID_FILE ] ; then
     PID=`cat $PID_FILE`
     kill -0 $PID
     res=$?
  fi
  if [ $res -eq 0 ] ; then
   echo "drelephant($PID) is running"
  else
   echo "drelephant is not running"
  fi
  return $res
}


restart() {
  status
  if [ $? -eq 0 ] ; then
    stop
    sleep 3
  fi
  start
  return $?
}


# user-supplied parameter to stop/start/restart process.
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  reload)
    restart
    ;;
  status)
    status
    ;;
  -h|--help)
    echo ""
    echo "usage: <prog> start|stop|restart|status"
    echo ""
    exit 0
    ;;
  *)
    echo $"Usage: <prog> {start|stop|restart|status}"
    exit 1
  esac


exit $?
